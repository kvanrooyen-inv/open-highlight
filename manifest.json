{
    "manifest_version": 2,
    "name": "Open Highlight",
    "version": "1.0",
    "description": "Highlight keywords on web pages with customizable categories and colors",
  
    "permissions": [
      "activeTab",
      "storage"
    ],
  
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["highlight.css"]
      }
    ],
  
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "Open Highlight"
    },

    "icons": {
        "16": "icons/open_highlight_icon.png",
        "32": "icons/open_highlight_icon.png",
        "48": "icons/open_highlight_icon.png",
        "128": "icons/open_highlight_icon.png"
    }
  }